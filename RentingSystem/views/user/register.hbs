{{>head}}
</body class="preload">
    {{>navigation}}
    <section id="main-container">
        <h1>Register</h1>
        {{#each errors}}
        <div class="error">
           <ul>
               <li>{{this}}</li>
           </ul>
        </div>
        {{else}}
        {{/each}}
    <form method="POST" action="/user/register">
    <input name="username" placeholder="enter username" value="{{username}}"/>
    <input type="fullName" name="fullName" placeholder="enter full name" value="{{fullName}}"/>
    <input type="password" name="password" placeholder="enter password" />
    <input type="password" name="repeat" placeholder="repeat password" />
    <input type="email" name="email" placeholder="enter email" value="{{email}}"/>
    <input type="number" name="age" placeholder="enter age" value="{{age}}"/>
    <input id="submit" type="submit" value="REGISTER" />
</form>

    </section>
    {{>footer}}
    <script>
        document.onload = function() {
            document
                .querySelector('body')
                .classList
                .remove('preload');
        }
    </script>
</body>
</html>
